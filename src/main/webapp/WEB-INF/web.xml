<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Unify Web Application</display-name>
    <!-- Application HTTP Servlet Configuration -->
    <servlet>
        <servlet-name>applicationServlet</servlet-name>
        <servlet-class>com.tcdng.unify.web.http.HttpApplicationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!-- Application Action applicationServlet Mapping -->
    <servlet-mapping>
        <servlet-name>applicationServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
